<!DOCTYPE html>
<link rel="stylesheet" href="/../assets/css/style.css">
{{> head}}

<body>
    {{> header}}

    <main>
       
        <div class="grid">
            {{#each users}}
            <article>
                <header>
                    <h1>
                        {{id}}
                    </h1>
                </header>
                <div>
                    <h2>
                        {{userName}}
                    </h2>
                    <p>
                        {{email}}
                    </p>
                </div>
                <div>
                    <a href="/admin/users/{{user.id}}?edit=true" class="btn">Edit</a>
                    <form action="/admin/delete-user" method="POST">
                        <input type="hidden" value="{{user.id}}" name="userID">
                        <button class="btn" type="submit">Delete</button>
                    </form>
        
                </div>
            </article>
        
        </div>
        {{else}}
        <h1>No Products Found!</h1>
        {{/each}}
        {{> footer}}
</body>

</html>




    
